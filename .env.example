# LN Markets Testnet API Configuration
LN_MARKETS_KEY=your_api_key_here
LN_MARKETS_SECRET=your_api_secret_here
LN_MARKETS_PASSPHRASE=your_passphrase_here
LN_MARKETS_NETWORK=testnet

# Trading Configuration
MAX_POSITION_SIZE=100
MAX_LEVERAGE=2
STOP_LOSS_PERCENTAGE=2
POSITION_LIMIT=3

# Strategy Configuration
SMA_SHORT_PERIOD=10
SMA_LONG_PERIOD=30
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# Risk Management
MAX_DAILY_LOSS=50
MAX_DRAWDOWN_PERCENTAGE=10
RISK_PER_TRADE=2

# Goose Agent Configuration
GOOSE_MODE=autonomous
GOOSE_DECISION_INTERVAL=60000
GOOSE_LOG_LEVEL=info

# WebSocket Configuration
WS_RECONNECT_INTERVAL=5000
WS_MAX_RECONNECT_ATTEMPTS=10

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=3000
LOG_RETENTION_DAYS=7