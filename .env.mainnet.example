# LN Markets MAINNET API Configuration - REAL MONEY!
LN_MARKETS_KEY=your_MAINNET_api_key_here
LN_MARKETS_SECRET=your_MAINNET_api_secret_here
LN_MARKETS_PASSPHRASE=your_MAINNET_passphrase_here
LN_MARKETS_NETWORK=mainnet

# MICRO TEST Trading Configuration for 4,700 sats (~$5-6)
MAX_POSITION_SIZE=2           # ~$2 positions (ultra small)
MAX_LEVERAGE=1                # No leverage for safety
STOP_LOSS_PERCENTAGE=1        # Tight stop losses
POSITION_LIMIT=1              # Only 1 position at a time

# Strategy Configuration
SMA_SHORT_PERIOD=10
SMA_LONG_PERIOD=30
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# MICRO TEST Risk Management  
MAX_DAILY_LOSS=2              # Max $2 daily loss
MAX_DRAWDOWN_PERCENTAGE=50    # Can afford 50% of $5
RISK_PER_TRADE=0.5            # Ultra conservative risk

# Goose Agent Configuration
GOOSE_MODE=autonomous
GOOSE_DECISION_INTERVAL=120000  # Slower decisions (2 minutes not 1)
GOOSE_LOG_LEVEL=info

# Enhanced Monitoring for Real Money
ENABLE_METRICS=true
METRICS_PORT=3000
LOG_RETENTION_DAYS=30         # Keep logs longer for real money

# Mainnet Safety Features
ENABLE_EMERGENCY_STOP=true
MAX_CONSECUTIVE_LOSSES=2      # Stop after 2 losses in a row
MAINNET_SAFETY_MODE=true      # Extra safety checks